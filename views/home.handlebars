<div class="home">
    <h1>Cool Website Name</h1>
    
    <button onClick="window.location.href = '/login';" id="loginLink">Login</button>

    <!--add the rest-->
    <ul>
        {{#each data.trending}}
                <li>
                    <div class = "movie-display">
                        <a href="/public/movie/{{this.id}}"><img src=https://image.tmdb.org/t/p/w500{{this.poster_path}} alt=""></a>
                    </div>   
                </li>
        {{/each}}
    </ul>

    <br>

    <ul>
        {{#each data.recentDiscussions}}
                <li>
                    <a href="/public/discussion/{{this._id}}">{{this.discussionTitle}}</a>
                </li>
        {{/each}}
    </ul>

    <style>
        .movie-display img
        {
            width: 10%;
            height: 10%;
        }
    </style>

    <script src="homeJs.js"></script>


</div>
