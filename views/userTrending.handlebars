<div class="home">
    
    <a href="/" class = 'home-btn'><h1>Back To Home</h1></a> 

    <div class="flex-container">
        <div id="movie-list">
            <h2 id="movie-label">Trending Movies</h2>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->
                <ol class="carousel-indicators">
                    {{#each data.trending}}
                        <li data-target="#myCarousel" data-slide-to="{{@index}}" {{#if @first}} class="active" {{/if}}></li>
                    {{/each}}
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    {{#each data.trending}}
                        <div {{#if @first}} class = "item active"{{else}} class = "item" {{/if}}>
                            <a href="/public/movie/{{this.id}}"><img src=https://image.tmdb.org/t/p/w500{{this.poster_path}} alt=""></a>
                        </div>   
                    {{/each}}
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

        <div id = "discussion-list">
            <h2>Recent Discussions</h2>
            <ul>
                {{#each data.recentDiscussions}}
                        <li>
                            <a href="/public/discussion/{{this._id}}">{{this.discussionTitle}}</a>
                        </li>
                {{/each}}
            </ul>
        </div>

    </div>

</div>
